<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kiran.gui.ChatClientController">
    <children>
        <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox fx:id="messageBox" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"
                      styleClass="h3"/>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="sendButton" mnemonicParsing="false" prefHeight="150.0" prefWidth="70.0"
                                text="SEND"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
